{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "incremental": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "nontyped_modules/**/*.d.ts"
  ],
  "exclude": [
    "**/*.test.ts", // all explicitly .test files are dev only assets too
    "**/*.test.tsx",
    "**/*.test.js",
    "**/.test/**/*",
    "**/.scratch/**/*",
    "**/__test*__/**/*", // todo: deprecate this pattern in favor of .test
    "rhachet.use.ts"
  ]
}
